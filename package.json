{
	"name": "google-calendar-timeline",
	"version": "1.0.1",
	"description": "Obsidian plugin to integrate Google Calendar with interactive timeline visualization",
	"main": "main.js",
	"scripts": {
		"setup:dev": "bash scripts/setup-dev.sh",
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"build:check": "tsc --noEmit",
		"type-check": "tsc --noEmit",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"validate:obsidian": "powershell -ExecutionPolicy Bypass -File scripts/validate-obsidian.ps1",
		"validate": "npm run build && npm test && npm run lint && npm run validate:obsidian",
		"presubmit": "npm run validate",
		"clean": "rimraf dist main.js",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"google-calendar",
		"calendar",
		"timeline",
		"productivity"
	],
	"author": "mehmedmaljoki",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mehmedmaljoki/google-calender-timeline.git"
	},
	"bugs": {
		"url": "https://github.com/mehmedmaljoki/google-calender-timeline/issues"
	},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "^20.19.33",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.27.3",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^30.2.0",
		"obsidian": "latest",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.4.6",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"vis-timeline": "^7.7.4"
	}
}
